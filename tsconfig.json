{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "watch": true,
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "src/*.ts",
        "src/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}